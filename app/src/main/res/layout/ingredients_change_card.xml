<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="5dp"
    android:background="@drawable/my_order_card">

    <TextView
        android:id="@+id/ingredients_change_card_1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Nome Ingrediente"
        android:textColor="@color/black"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <!-- 1 -->
    <ImageView
        android:id="@+id/ingredients_change_card_1_decrement_circle"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@drawable/white_circle_background"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ingredients_change_card_1_quantity" />

    <ImageView
        android:id="@+id/ingredients_change_card_1_decrement"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/quantity_decrease"
        android:layout_marginBottom="7dp"
        app:layout_constraintEnd_toEndOf="@+id/ingredients_change_card_1_decrement_circle"
        app:layout_constraintBottom_toBottomOf="@+id/ingredients_change_card_1_decrement_circle" />

    <TextView
        android:id="@+id/ingredients_change_card_1_quantity"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="0"
        android:textColor="@color/black"
        android:background="@drawable/text_quantity"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="12dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ingredients_change_card_1_decrement_circle" />

    <ImageView
        android:id="@+id/ingredients_change_card_1_increment_circle"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@drawable/white_circle_background"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ingredients_change_card_1_quantity"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/ingredients_change_card_1_increment"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/quantity_increase"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="6dp"
        app:layout_constraintEnd_toEndOf="@+id/ingredients_change_card_1_increment_circle"
        app:layout_constraintBottom_toBottomOf="@+id/ingredients_change_card_1_increment_circle" />
    <!-- 2 -->
    <TextView
        android:id="@+id/ingredients_change_card_2_quantity"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="0"
        android:textColor="@color/black"
        android:background="@drawable/text_quantity"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="15dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ingredients_change_card_2_increment" />

    <ImageView
        android:id="@+id/ingredients_change_card_2_increment_circle"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@drawable/white_circle_background"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ingredients_change_card_2_quantity"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/ingredients_change_card_2_increment"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/quantity_increase"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="6dp"
        app:layout_constraintEnd_toEndOf="@+id/ingredients_change_card_2_increment_circle"
        app:layout_constraintBottom_toBottomOf="@+id/ingredients_change_card_2_increment_circle" />

    <!-- 3 -->

    <ImageView
        android:id="@+id/ingredients_change_card_3_decrement_circle"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@drawable/white_circle_background"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/ingredients_change_card_3_decrement"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/quantity_decrease"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="@+id/ingredients_change_card_3_decrement_circle"
        app:layout_constraintBottom_toBottomOf="@+id/ingredients_change_card_3_decrement_circle" />

    <!-- 4 -->
    <ImageView
        android:id="@+id/ingredients_change_card_4_uncheck_circle"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/white_circle_background"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ingredients_change_card_4_check" />

    <ImageView
        android:id="@+id/ingredients_change_card_4_uncheck_circle_green"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/green_circle_background"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ingredients_change_card_4_check" />

    <ImageView
        android:id="@+id/ingredients_change_card_4_remove"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/close"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="3dp"
        app:layout_constraintEnd_toEndOf="@+id/ingredients_change_card_4_uncheck_circle"
        app:layout_constraintBottom_toBottomOf="@+id/ingredients_change_card_4_uncheck_circle" />

    <ImageView
        android:id="@+id/ingredients_change_card_4_remove_white"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/white_close"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="3dp"
        app:layout_constraintEnd_toEndOf="@+id/ingredients_change_card_4_uncheck_circle_green"
        app:layout_constraintBottom_toBottomOf="@+id/ingredients_change_card_4_uncheck_circle_green" />

    <ImageView
        android:id="@+id/ingredients_change_card_4_check_circle"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/white_circle_background"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ingredients_change_card_4_uncheck_circle"
        app:layout_constraintRight_toRightOf="parent" />


    <ImageView
        android:id="@+id/ingredients_change_card_4_check_circle_green"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/green_circle_background"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ingredients_change_card_4_uncheck_circle"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/ingredients_change_card_4_check"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/check"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="3dp"
        app:layout_constraintEnd_toEndOf="@+id/ingredients_change_card_4_check_circle"
        app:layout_constraintBottom_toBottomOf="@+id/ingredients_change_card_4_check_circle" />

    <ImageView
        android:id="@+id/ingredients_change_card_4_check_white"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/white_check"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="3dp"
        app:layout_constraintEnd_toEndOf="@+id/ingredients_change_card_4_check_circle_green"
        app:layout_constraintBottom_toBottomOf="@+id/ingredients_change_card_4_check_circle_green" />
    <!-- 5 -->

</androidx.constraintlayout.widget.ConstraintLayout>